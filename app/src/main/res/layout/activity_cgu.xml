<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activities.CguActivity">

    <TextView
        android:id="@+id/cgu_text"
        android:layout_width="404dp"
        android:layout_height="595dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/chewy"
        android:gravity="center"
        android:text="@string/cgu"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/exitcgu"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="599dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/custombuttonblackoval"
        android:fontFamily="@font/chewy"
        android:text="Exit"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:onClick="exit_cgu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.606"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>